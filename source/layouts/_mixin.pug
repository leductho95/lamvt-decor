mixin product({imgSrc, column})
  if column
    div(class=column)
      .product
        a.d-block(href="single-product.html" title="").product-img
          img(src= imgSrc, alt="", class='img-fluid')
        .product-info
          .product-info-content
            h3
              a(href="single-product.html") Lorem Ipsum is simply dummy text
            span.product-price 9.500.000đ
            del.product-sale 11.500.000đ
          .product-action
            a(href="#" title="")
              i.fab.fa-opencart.mr-2
              span thêm vào giỏ

  else
    .product.wow.fadeIn(data-wow-delay=".5s" data-wow-duration="1s")
      a.d-block(href="single-product.html" title="").product-img
        img(src= imgSrc, alt="", class='img-fluid')
      .product-info
        .product-info-content
          h3
            a(href="single-product.html") Lorem Ipsum is simply dummy text
          span.product-price 9.500.000đ
          del.product-sale 11.500.000đ
        .product-action
          a(href="#" title="")
            i.fab.fa-opencart.mr-2
            span thêm vào giỏ

mixin paginations()
  .site-pagination
    a.disabled(href='#') &laquo;
    a(href='#') 1
    a.active(href='#') 2
    a(href='#') 3
    a(href='#') 4
    a(href='#') 5
    a(href='#') 6
    a(href='#') &raquo;

